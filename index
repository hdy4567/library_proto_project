    <!-- Modal for New File -->
    <div id="new-file-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 hidden z-50 flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-xl w-96">
            <h3 class="text-xl font-bold mb-4">ìƒˆ íŒŒì¼ ì¶”ê°€</h3>
            <input type="text" id="new-file-name" class="w-full p-3 border border-gray-300 rounded-md mb-4 focus:ring-amber-500 focus:border-amber-500" placeholder="íŒŒì¼ëª… (ì˜ˆ: main.py, README.md)">
            <div class="flex justify-end space-x-2">
                <button onclick="window.hideModal('new-file-modal')" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded-md">ì·¨ì†Œ</button>
                <button onclick="window.addNewFile()" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-md">ì¶”ê°€</button>
