    <!-- Status Message Box (Replaces alert()) -->
    <div id="status-message-box" class="fixed top-5 right-5 p-4 rounded-lg text-white shadow-lg transition-transform duration-300 transform translate-x-full hidden" role="alert">
        <p id="status-message-text"></p>
    </div>

    <!-- Firebase Imports -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, collection, query, orderBy, setDoc, addDoc, updateDoc, deleteDoc, arrayUnion, arrayRemove } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // Firestore ë””ë²„ê·¸ ë¡œê¹… ì„¤ì •
        setLogLevel('Debug');

        // ì „ì—­ ë³€ìˆ˜ ì„¤ì • (Firebase, Auth, State)
        let db, auth;
        let userId = null;
        let currentProjectId = null;
        let currentFileId = null;
        let projects = [];
        
        // Canvas ì „ì—­ ë³€ìˆ˜ ê°€ì ¸ì˜¤ê¸°
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        // UI ìš”ì†Œ
        const projectListElement = document.getElementById('project-list');
        const codeEditorElement = document.getElementById('code-editor');
        const loadingSpinner = document.getElementById('loading-spinner');
        const contentArea = document.getElementById('content-area');
        const fileTabsContainer = document.getElementById('file-tabs');
        
        // --- ìœ í‹¸ë¦¬í‹° ë° UI í•¨ìˆ˜ (Globalize functions used in inline handlers) ---

        // ìƒíƒœ ë©”ì‹œì§€ í‘œì‹œ (alert() ëŒ€ì²´)
        window.showStatus = function(message, isError = false) {
            const box = document.getElementById('status-message-box');
            const text = document.getElementById('status-message-text');
            
            text.textContent = message;
            box.classList.remove('hidden', 'bg-green-500', 'bg-red-500');
            box.classList.add(isError ? 'bg-red-500' : 'bg-green-500');
            box.classList.remove('translate-x-full');
            box.classList.add('translate-x-0');

            setTimeout(() => {
                box.classList.remove('translate-x-0');
                box.classList.add('translate-x-full');
                setTimeout(() => box.classList.add('hidden'), 300);
            }, 3000);
        }

        window.showModal = function(id) {
            document.getElementById(id).classList.remove('hidden');
        }

        window.hideModal = function(id) {
            document.getElementById(id).classList.add('hidden');
        }
        
        // íŒŒì¼ ID ìƒì„± (simple unique ID for file items within a document)
        function generateFileId() {
            return 'file_' + Date.now() + Math.random().toString(36).substring(2, 9);
        }

        // --- Firebase ì´ˆê¸°í™” ë° ì¸ì¦ ---

        async function initFirebase() {
            if (!firebaseConfig) {
                console.error("Firebase configuration is missing.");
                window.showStatus("Firebase ì„¤ì • ì˜¤ë¥˜. ì•±ì„ ë¡œë“œí•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.", true);
                return;
            }

            try {
                const app = initializeApp(firebaseConfig);
                auth = getAuth(app);
                db = getFirestore(app);

                loadingSpinner.classList.remove('hidden');
                
                // ì¸ì¦ ìƒíƒœ ë¦¬ìŠ¤ë„ˆ ì„¤ì •
                onAuthStateChanged(auth, async (user) => {
                    if (user) {
                        userId = user.uid;
                    } else {
                        // ì´ˆê¸° í† í°ì´ ìˆìœ¼ë©´ ì‚¬ìš©í•˜ê³ , ì—†ìœ¼ë©´ ìµëª… ë¡œê·¸ì¸
                        if (initialAuthToken) {
                            await signInWithCustomToken(auth, initialAuthToken);
                            userId = auth.currentUser.uid;
                        } else {
                            await signInAnonymously(auth);
                            userId = auth.currentUser.uid;
                        }
                    }

                    if (userId) {
                        document.getElementById('user-id').textContent = userId;
                        // ì¸ì¦ ì™„ë£Œ í›„ ë°ì´í„° ë¦¬ìŠ¤ë„ˆ ì‹œì‘
                        listenForProjects();
                    } else {
                        loadingSpinner.classList.add('hidden');
                        window.showStatus("ì¸ì¦ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.", true);
                    }
                });

            } catch (error) {
                console.error("Firebase ì´ˆê¸°í™” ì¤‘ ì˜¤ë¥˜ ë°œìƒ:", error);
                window.showStatus("Firebase ì´ˆê¸°í™” ì¤‘ ì¹˜ëª…ì ì¸ ì˜¤ë¥˜ ë°œìƒ.", true);
            }
        }

        // --- Firestore ë°ì´í„° ê´€ë¦¬ ---

        function getCollectionPath() {
            // Firestore ë³´ì•ˆ ê·œì¹™ì— ë”°ë¼ ì‚¬ìš©ìë³„ PRIVATE ê²½ë¡œë¥¼ ì‚¬ìš©í•©ë‹ˆë‹¤.
            return `/artifacts/${appId}/users/${userId}/code_library_projects`;
        }
        
        function listenForProjects() {
            if (!userId) return;

            const projectsRef = collection(db, getCollectionPath());
            // ì •ë ¬ ê¸°ëŠ¥ì€ Firestoreì˜ orderBy ì—†ì´ JSì—ì„œ ì²˜ë¦¬í•˜ê¸° ìœ„í•´ ì£¼ì„ ì²˜ë¦¬
            const q = query(projectsRef); // , orderBy('createdAt', 'desc'));

            // ì‹¤ì‹œê°„ ë¦¬ìŠ¤ë„ˆ ì„¤ì •
            onSnapshot(q, (snapshot) => {
                projects = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                
                // ìƒì„± ë‚ ì§œë¥¼ ê¸°ì¤€ìœ¼ë¡œ ë¡œì»¬ì—ì„œ ë‚´ë¦¼ì°¨ìˆœ ì •ë ¬ (ìµœì‹  í”„ë¡œì íŠ¸ê°€ ìœ„ë¡œ)
                projects.sort((a, b) => b.createdAt?.toMillis() - a.createdAt?.toMillis());
                
                renderProjectList();
                
                // ì²« ë¡œë“œ ì‹œ ë˜ëŠ” í˜„ì¬ í”„ë¡œì íŠ¸ê°€ ì‚­ì œ/ë³€ê²½ë˜ì—ˆì„ ê²½ìš° ì²˜ë¦¬
                if (projects.length > 0 && !projects.find(p => p.id === currentProjectId)) {
                    window.selectProject(projects[0].id);
                } else if (projects.length > 0 && currentProjectId) {
                    // í˜„ì¬ í”„ë¡œì íŠ¸ê°€ ì—¬ì „íˆ ì¡´ì¬í•˜ë©´ íŒŒì¼ ëª©ë¡ë§Œ ì—…ë°ì´íŠ¸
                    window.selectProject(currentProjectId);
                } else if (projects.length === 0) {
                    // í”„ë¡œì íŠ¸ê°€ ì—†ìœ¼ë©´ ì´ˆê¸°í™”
                    clearContentArea();
                }
                
                loadingSpinner.classList.add('hidden');
                contentArea.classList.remove('hidden');
            }, (error) => {
                console.error("Firestore ë¦¬ìŠ¤ë„ˆ ì˜¤ë¥˜:", error);
                window.showStatus("í”„ë¡œì íŠ¸ ëª©ë¡ ë¡œë“œ ì¤‘ ì˜¤ë¥˜ ë°œìƒ.", true);
            });
        }

        // --- CRUD í•¨ìˆ˜: í”„ë¡œì íŠ¸ (Globalized functions) ---

        window.addNewProject = async function() {
            const nameInput = document.getElementById('new-project-name');
            const projectName = nameInput.value.trim();
            window.hideModal('new-project-modal');
            nameInput.value = '';

            if (projectName === "") {
                window.showStatus("í”„ë¡œì íŠ¸ ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.", true);
                return;
            }

            try {
                const newProjectData = {
                    name: projectName,
                    createdAt: new Date(),
                    files: [{
                        id: generateFileId(),
                        name: 'README.md',
                        content: `# ${projectName}\n\nì´ê²ƒì€ ë‹¹ì‹ ì˜ ì²« ë²ˆì§¸ íŒŒì¼ì…ë‹ˆë‹¤. ì½”ë“œë¥¼ ì…ë ¥í•˜ì„¸ìš”!`,
                        lastModified: new Date()
                    }]
                };

                const projectsRef = collection(db, getCollectionPath());
                const docRef = await addDoc(projectsRef, newProjectData);
                window.selectProject(docRef.id);
                window.showStatus(`í”„ë¡œì íŠ¸ '${projectName}'ê°€ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤.`);
            } catch (e) {
                console.error("í”„ë¡œì íŠ¸ ì¶”ê°€ ì‹¤íŒ¨:", e);
                window.showStatus("í”„ë¡œì íŠ¸ ì¶”ê°€ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }

        window.renameProjectPrompt = function() {
            if (!currentProjectId) return;
            const project = projects.find(p => p.id === currentProjectId);
            // promptëŠ” ê¸°ë³¸ì ìœ¼ë¡œ ì „ì—­ í•¨ìˆ˜ì´ë¯€ë¡œ windowë¥¼ ë¶™ì´ì§€ ì•Šì•„ë„ ë˜ì§€ë§Œ, í†µì¼ì„±ì„ ìœ„í•´ ìœ ì§€
            const newName = window.prompt(`ìƒˆ í”„ë¡œì íŠ¸ ì´ë¦„ ì…ë ¥:`, project.name);
            
            if (newName && newName.trim() !== "" && newName.trim() !== project.name) {
                renameProject(newName.trim());
            }
        }

        async function renameProject(newName) {
            if (!currentProjectId) return;
            try {
                const docRef = doc(db, getCollectionPath(), currentProjectId);
                await updateDoc(docRef, { name: newName });
                window.showStatus(`í”„ë¡œì íŠ¸ ì´ë¦„ì´ '${newName}'ë¡œ ë³€ê²½ë˜ì—ˆìŠµë‹ˆë‹¤.`);
            } catch (e) {
                console.error("í”„ë¡œì íŠ¸ ì´ë¦„ ë³€ê²½ ì‹¤íŒ¨:", e);
                window.showStatus("í”„ë¡œì íŠ¸ ì´ë¦„ ë³€ê²½ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }
        
        window.deleteProjectPrompt = function() {
            if (!currentProjectId) return;
            const project = projects.find(p => p.id === currentProjectId);
            
            if (window.confirm(`ì •ë§ë¡œ í”„ë¡œì íŠ¸ '${project.name}'ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?\nì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.`)) {
                deleteProject();
            }
        }

        async function deleteProject() {
            if (!currentProjectId) return;
            try {
                await deleteDoc(doc(db, getCollectionPath(), currentProjectId));
                currentProjectId = null;
                currentFileId = null;
                window.showStatus("í”„ë¡œì íŠ¸ê°€ ì„±ê³µì ìœ¼ë¡œ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.");
            } catch (e) {
                console.error("í”„ë¡œì íŠ¸ ì‚­ì œ ì‹¤íŒ¨:", e);
                window.showStatus("í”„ë¡œì íŠ¸ ì‚­ì œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }

        // --- CRUD í•¨ìˆ˜: íŒŒì¼ (File is an object within the Project document, Globalized functions) ---

        window.showFileModal = function() {
            if (!currentProjectId) return;
            window.showModal('new-file-modal');
        }

        window.addNewFile = async function() {
            const nameInput = document.getElementById('new-file-name');
            const fileName = nameInput.value.trim();
            window.hideModal('new-file-modal');
            nameInput.value = '';

            if (fileName === "") {
                window.showStatus("íŒŒì¼ ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.", true);
                return;
            }
            
            const project = projects.find(p => p.id === currentProjectId);
            if (project.files.some(f => f.name === fileName)) {
                window.showStatus("ê°™ì€ ì´ë¦„ì˜ íŒŒì¼ì´ ì´ë¯¸ ì¡´ì¬í•©ë‹ˆë‹¤.", true);
                return;
            }

            try {
                const newFile = {
                    id: generateFileId(),
                    name: fileName,
                    content: `// íŒŒì¼: ${fileName}\n`,
                    lastModified: new Date()
                };

                const docRef = doc(db, getCollectionPath(), currentProjectId);
                await updateDoc(docRef, {
                    files: arrayUnion(newFile)
                });
                
                // ìƒˆ íŒŒì¼ ì¶”ê°€ í›„ ë°”ë¡œ ì„ íƒ
                window.selectFile(newFile.id);
                window.showStatus(`íŒŒì¼ '${fileName}'ê°€ ì¶”ê°€ë˜ì—ˆìŠµë‹ˆë‹¤.`);

            } catch (e) {
                console.error("íŒŒì¼ ì¶”ê°€ ì‹¤íŒ¨:", e);
                window.showStatus("íŒŒì¼ ì¶”ê°€ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }
        
        window.saveFileContent = async function() {
            if (!currentProjectId || !currentFileId) {
                window.showStatus("í”„ë¡œì íŠ¸ì™€ íŒŒì¼ì„ ì„ íƒí•´ì£¼ì„¸ìš”.", true);
                return;
            }

            const newContent = codeEditorElement.value;
            const project = projects.find(p => p.id === currentProjectId);
            const fileToUpdate = project.files.find(f => f.id === currentFileId);

            if (!fileToUpdate) return;
            
            // ê¸°ì¡´ íŒŒì¼ ë°°ì—´ì—ì„œ í•´ë‹¹ íŒŒì¼ì„ ì œê±°
            const updatedFiles = project.files.filter(f => f.id !== currentFileId);

            // ì—…ë°ì´íŠ¸ëœ ë‚´ìš©ìœ¼ë¡œ ìƒˆ íŒŒì¼ ê°ì²´ ìƒì„±
            const updatedFile = {
                ...fileToUpdate,
                content: newContent,
                lastModified: new Date()
            };
            updatedFiles.push(updatedFile);

            try {
                const docRef = doc(db, getCollectionPath(), currentProjectId);
                // íŒŒì¼ì„ í†µì§¸ë¡œ ë®ì–´ì“°ê¸° (ArrayUnion/ArrayRemoveëŠ” ê°ì²´ ì—…ë°ì´íŠ¸ê°€ ë³µì¡í•˜ë¯€ë¡œ ì „ì²´ ë®ì–´ì“°ê¸°)
                await setDoc(docRef, { ...project, files: updatedFiles, lastModified: new Date() });
                
                window.showStatus("ì½”ë“œ ë‚´ìš©ì´ ì„±ê³µì ìœ¼ë¡œ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.");
            } catch (e) {
                console.error("ì½”ë“œ ì €ì¥ ì‹¤íŒ¨:", e);
                window.showStatus("ì½”ë“œ ì €ì¥ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }
        
        window.renameFilePrompt = function() {
            if (!currentProjectId || !currentFileId) return;
            const project = projects.find(p => p.id === currentProjectId);
            const file = project.files.find(f => f.id === currentFileId);
            
            const newName = window.prompt(`ìƒˆ íŒŒì¼ ì´ë¦„ ì…ë ¥:`, file.name);
            
            if (newName && newName.trim() !== "" && newName.trim() !== file.name) {
                renameFile(newName.trim());
            }
        }
        
        async function renameFile(newName) {
            if (!currentProjectId || !currentFileId) return;
            const project = projects.find(p => p.id === currentProjectId);
            const newNameTrimmed = newName.trim();
            
            if (project.files.some(f => f.name === newNameTrimmed && f.id !== currentFileId)) {
                window.showStatus("ê°™ì€ ì´ë¦„ì˜ íŒŒì¼ì´ ì´ë¯¸ ì¡´ì¬í•©ë‹ˆë‹¤.", true);
                return;
            }
            
            try {
                // íŒŒì¼ ë°°ì—´ ì—…ë°ì´íŠ¸
                const updatedFiles = project.files.map(f => {
                    if (f.id === currentFileId) {
                        return { ...f, name: newNameTrimmed, lastModified: new Date() };
                    }
                    return f;
                });
                
                const docRef = doc(db, getCollectionPath(), currentProjectId);
                await updateDoc(docRef, { files: updatedFiles });
                
                window.showStatus(`íŒŒì¼ëª…ì´ '${newNameTrimmed}'ë¡œ ë³€ê²½ë˜ì—ˆìŠµë‹ˆë‹¤.`);
            } catch (e) {
                console.error("íŒŒì¼ëª… ë³€ê²½ ì‹¤íŒ¨:", e);
                window.showStatus("íŒŒì¼ëª… ë³€ê²½ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
            }
        }

        window.deleteFile = function() {
            if (!currentProjectId || !currentFileId) return;
            const project = projects.find(p => p.id === currentProjectId);
            const file = project.files.find(f => f.id === currentFileId);
            
            if (project.files.length === 1) {
                window.showStatus("í”„ë¡œì íŠ¸ì—ëŠ” ìµœì†Œí•œ í•˜ë‚˜ì˜ íŒŒì¼ì´ ìˆì–´ì•¼ í•©ë‹ˆë‹¤. ì´ íŒŒì¼ì„ ì‚­ì œí•˜ë ¤ë©´ í”„ë¡œì íŠ¸ ì „ì²´ë¥¼ ì‚­ì œí•´ì•¼ í•©ë‹ˆë‹¤.", true);
                return;
            }

            if (window.confirm(`ì •ë§ë¡œ íŒŒì¼ '${file.name}'ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?\nì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.`)) {
                try {
                    const updatedFiles = project.files.filter(f => f.id !== currentFileId);
                    
                    const docRef = doc(db, getCollectionPath(), currentProjectId);
                    updateDoc(docRef, { files: updatedFiles });

                    // ë‹¤ìŒ íŒŒì¼ ì„ íƒ
                    currentFileId = updatedFiles[0]?.id || null;
                    if (currentFileId) {
                        window.selectFile(currentFileId);
                    } else {
                        // ë‚¨ì€ íŒŒì¼ì´ ì—†ìœ¼ë©´ ì—ë””í„° ë¹„ìš°ê¸°
                        codeEditorElement.value = '';
                    }

                    window.showStatus(`íŒŒì¼ '${file.name}'ê°€ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.`);
                } catch (e) {
                    console.error("íŒŒì¼ ì‚­ì œ ì‹¤íŒ¨:", e);
                    window.showStatus("íŒŒì¼ ì‚­ì œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.", true);
                }
            }
        }

        // --- UI ìƒí˜¸ì‘ìš© í•¨ìˆ˜ ---
        
        function clearContentArea() {
            document.getElementById('current-project-title').textContent = "í”„ë¡œì íŠ¸ë¥¼ ì„ íƒí•˜ê±°ë‚˜ ìƒˆë¡œ ì¶”ê°€í•˜ì„¸ìš”.";
            document.getElementById('current-file-name').textContent = "";
            fileTabsContainer.innerHTML = '';
            codeEditorElement.value = '';
            document.getElementById('rename-project-btn').disabled = true;
            document.getElementById('add-file-btn').disabled = true;
            document.getElementById('delete-project-btn').classList.add('hidden');
            document.getElementById('rename-file-btn').classList.add('hidden');
            document.getElementById('delete-file-btn').classList.add('hidden');
        }

        function renderProjectList() {
            projectListElement.innerHTML = ''; // ì´ˆê¸°í™”

            if (projects.length === 0) {
                 projectListElement.innerHTML = '<p class="text-gray-400 text-sm mt-4 p-2">í˜„ì¬ ë„ì„œê´€ì— ì±…ì´ ì—†ìŠµë‹ˆë‹¤. ìƒˆ ì±…ì„ ì¶”ê°€í•´ë³´ì„¸ìš”!</p>';
                 clearContentArea();
                 return;
            }
            
            projects.forEach(project => {
                const isActive = project.id === currentProjectId;
                
                const item = document.createElement('div');
                item.classList.add('book-item', 'bg-stone-700', 'text-white', 'p-3', 'rounded-lg', 'cursor-pointer');
                if (isActive) {
                    item.classList.add('active');
                }
                item.textContent = project.name;
                item.dataset.projectId = project.id;
                
                item.addEventListener('click', () => window.selectProject(project.id));
                projectListElement.appendChild(item);
            });
        }
        
        window.selectProject = function(projectId) {
            currentProjectId = projectId;
            const project = projects.find(p => p.id === projectId);
            
            if (!project) return;
            
            // UI ì—…ë°ì´íŠ¸
            document.getElementById('current-project-title').textContent = project.name;
            document.getElementById('rename-project-btn').disabled = false;
            document.getElementById('add-file-btn').disabled = false;
            document.getElementById('delete-project-btn').classList.remove('hidden');

            // í”„ë¡œì íŠ¸ ëª©ë¡ í™œì„±í™”
            document.querySelectorAll('.book-item').forEach(item => {
                item.classList.remove('active');
            });
            document.querySelector(`[data-project-id="${projectId}"]`).classList.add('active');

            renderFileTabs(project.files);
            
            // ë©”ì¸ íŒŒì¼ ë˜ëŠ” ì²« ë²ˆì§¸ íŒŒì¼ ì„ íƒ
            let fileToSelect = project.files[0];
            if (currentFileId) {
                const existingFile = project.files.find(f => f.id === currentFileId);
                if (existingFile) fileToSelect = existingFile;
            }
            
            if (fileToSelect) {
                window.selectFile(fileToSelect.id);
            }
        }
        
        function renderFileTabs(files) {
            fileTabsContainer.innerHTML = '';
            
            files.forEach(file => {
                const tab = document.createElement('button');
                tab.classList.add('py-2', 'px-4', 'font-medium', 'text-sm', 'transition', 'duration-150', 'border-t', 'border-x', 'rounded-t-lg', 'focus:outline-none');
                
                if (file.id === currentFileId) {
                    tab.classList.add('bg-white', 'text-amber-600', 'border-gray-300', 'border-b-white', 'z-10');
                } else {
                    tab.classList.add('bg-gray-100', 'text-gray-600', 'hover:bg-gray-200', 'border-transparent', 'border-b-gray-300');
                }

                tab.textContent = file.name;
                tab.dataset.fileId = file.id;
                tab.addEventListener('click', () => window.selectFile(file.id));
                
                fileTabsContainer.appendChild(tab);
            });
        }
        
        window.selectFile = function(fileId) {
            currentFileId = fileId;
            const project = projects.find(p => p.id === currentProjectId);
            if (!project) return;
            
            const file = project.files.find(f => f.id === fileId);
            if (!file) return;

            // ì—ë””í„° ì—…ë°ì´íŠ¸
            codeEditorElement.value = file.content || '';
            document.getElementById('current-file-name').textContent = `[${file.name}]`;
            
            // íŒŒì¼ ì•¡ì…˜ ë²„íŠ¼ ë³´ì´ê¸°
            document.getElementById('rename-file-btn').classList.remove('hidden');
            document.getElementById('delete-file-btn').classList.remove('hidden');

            // íƒ­ UI ì—…ë°ì´íŠ¸
            renderFileTabs(project.files);
        }

        // --- ì•± ì‹œì‘ ---
        initFirebase();
    </script>
</body>
</html>
